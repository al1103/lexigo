<div class="d-flex justify-content-between align-items-center mb-4">
    <h3><i class="fas fa-question-circle me-2"></i>Quiz Sessions Management</h3>
    <div>
        <span class="badge bg-info fs-6">Total Sessions: <%= totalSessions %></span>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <% if (sessions && sessions.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Session ID</th>
                        <th>User</th>
                        <th>Score</th>
                        <th>Questions</th>
                        <th>Correct Answers</th>
                        <th>Status</th>
                        <th>Created At</th>
                    </tr>
                </thead>
                <tbody>
                    <% sessions.forEach(session => { %>
                    <tr>
                        <td><strong>#<%= session.id %></strong></td>
                        <td>
                            <i class="fas fa-user me-1"></i>
                            <%= session.username %>
                        </td>
                        <td>
                            <% if (session.is_completed) { %>
                                <%
                                var scoreColor = 'secondary';
                                if (session.score >= 80) {
                                    scoreColor = 'success';
                                } else if (session.score >= 60) {
                                    scoreColor = 'warning';
                                } else {
                                    scoreColor = 'danger';
                                }
                                %>
                                <span class="badge bg-<%= scoreColor %> fs-6"><%= session.score %>%</span>
                            <% } else { %>
                                <span class="text-muted">N/A</span>
                            <% } %>
                        </td>
                        <td>
                            <span class="badge bg-secondary"><%= session.total_questions || 0 %></span>
                        </td>
                        <td>
                            <span class="badge bg-success"><%= session.correct_answers || 0 %></span>
                        </td>
                        <td>
                            <% if (session.is_completed) { %>
                                <span class="badge bg-success">
                                    <i class="fas fa-check-circle me-1"></i>Completed
                                </span>
                            <% } else { %>
                                <span class="badge bg-warning">
                                    <i class="fas fa-clock me-1"></i>In Progress
                                </span>
                            <% } %>
                        </td>
                        <td>
                            <small class="text-muted">
                                <%= moment(session.created_at).format('MMM DD, YYYY HH:mm') %>
                            </small>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
        <nav aria-label="Quiz sessions pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                <% if (currentPage > 1) { %>
                <li class="page-item">
                    <a class="page-link" href="/admin/quiz-sessions?page=<%= currentPage - 1 %>">
                        <i class="fas fa-chevron-left"></i> Previous
                    </a>
                </li>
                <% } %>

                <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="/admin/quiz-sessions?page=<%= i %>"><%= i %></a>
                </li>
                <% } %>

                <% if (currentPage < totalPages) { %>
                <li class="page-item">
                    <a class="page-link" href="/admin/quiz-sessions?page=<%= currentPage + 1 %>">
                        Next <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
                <% } %>
            </ul>
        </nav>
        <% } %>

        <% } else { %>
        <div class="text-center py-5">
            <i class="fas fa-question-circle fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">No quiz sessions found</h5>
            <p class="text-muted">Quiz sessions will appear here once users start taking quizzes.</p>
        </div>
        <% } %>
    </div>
</div>

<!-- Statistics Summary -->
<div class="row mt-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h4><%= sessions.filter(s => s.is_completed).length %></h4>
                <small>Completed Sessions</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <h4><%= sessions.filter(s => !s.is_completed).length %></h4>
                <small>In Progress</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <%
                const completedSessions = sessions.filter(s => s.is_completed && s.score !== null);
                const avgScore = completedSessions.length > 0
                    ? (completedSessions.reduce((sum, s) => sum + s.score, 0) / completedSessions.length).toFixed(1)
                    : 0;
                %>
                <h4><%= avgScore %>%</h4>
                <small>Average Score</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h4><%= sessions.filter(s => s.score >= 80).length %></h4>
                <small>High Scores (80%+)</small>
            </div>
        </div>
    </div>
</div>
