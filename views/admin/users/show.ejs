<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3><i class="fas fa-user me-2"></i>User Details</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="/admin/users">Users</a></li>
                <li class="breadcrumb-item active"><%= user.username %></li>
            </ol>
        </nav>
    </div>
    <div>
        <a href="/admin/users" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Users
        </a>
    </div>
</div>

<div class="row">
    <!-- User Information -->
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-user-circle me-2"></i>User Information</h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <div class="avatar-placeholder mb-3">
                        <i class="fas fa-user-circle fa-5x text-muted"></i>
                    </div>
                    <h4><%= user.username %></h4>
                    <% if (user.role === 'admin') { %>
                        <span class="badge bg-danger fs-6">Admin</span>
                    <% } else { %>
                        <span class="badge bg-primary fs-6">User</span>
                    <% } %>
                </div>

                <table class="table table-borderless">
                    <tr>
                        <td><strong>ID:</strong></td>
                        <td><%= user.id %></td>
                    </tr>
                    <tr>
                        <td><strong>Email:</strong></td>
                        <td><%= user.email %></td>
                    </tr>
                    <tr>
                        <td><strong>Full Name:</strong></td>
                        <td><%= user.full_name || 'Not provided' %></td>
                    </tr>
                    <tr>
                        <td><strong>Joined:</strong></td>
                        <td><%= moment(user.created_at).format('MMMM DD, YYYY') %></td>
                    </tr>
                    <tr>
                        <td><strong>Member for:</strong></td>
                        <td><%= moment(user.created_at).fromNow() %></td>
                    </tr>
                </table>

                <% if (user.role !== 'admin') { %>
                <div class="text-center mt-3">
                    <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete()">
                        <i class="fas fa-trash me-1"></i> Delete User
                    </button>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- User Statistics -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <div class="text-center">
                            <div class="stat-icon bg-primary mx-auto mb-2" style="width: 50px; height: 50px;">
                                <i class="fas fa-star"></i>
                            </div>
                            <h4><%= user.total_points || 0 %></h4>
                            <small class="text-muted">Total Points</small>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="text-center">
                            <div class="stat-icon bg-success mx-auto mb-2" style="width: 50px; height: 50px;">
                                <i class="fas fa-calendar-week"></i>
                            </div>
                            <h4><%= user.weekly_points || 0 %></h4>
                            <small class="text-muted">Weekly Points</small>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="text-center">
                            <div class="stat-icon bg-info mx-auto mb-2" style="width: 50px; height: 50px;">
                                <i class="fas fa-fire"></i>
                            </div>
                            <h4><%= user.streak_days || 0 %></h4>
                            <small class="text-muted">Streak Days</small>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="text-center">
                            <div class="stat-icon bg-warning mx-auto mb-2" style="width: 50px; height: 50px;">
                                <i class="fas fa-book"></i>
                            </div>
                            <h4><%= user.words_mastered || 0 %></h4>
                            <small class="text-muted">Words Mastered</small>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6 mb-3">
                        <div class="text-center">
                            <div class="stat-icon bg-secondary mx-auto mb-2" style="width: 50px; height: 50px;">
                                <i class="fas fa-question-circle"></i>
                            </div>
                            <h4><%= user.quizzes_completed || 0 %></h4>
                            <small class="text-muted">Quizzes Completed</small>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="text-center">
                            <div class="stat-icon bg-danger mx-auto mb-2" style="width: 50px; height: 50px;">
                                <i class="fas fa-microphone"></i>
                            </div>
                            <h4><%= user.speaking_sessions_completed || 0 %></h4>
                            <small class="text-muted">Speaking Sessions</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Activity History -->
<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-question-circle me-2"></i>Recent Quiz Sessions</h5>
            </div>
            <div class="card-body">
                <% if (quizSessions && quizSessions.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Session ID</th>
                                <th>Score</th>
                                <th>Status</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% quizSessions.forEach(session => { %>
                            <tr>
                                <td>#<%= session.id %></td>
                                <td>
                                    <% if (session.is_completed) { %>
                                        <%
                                        var scoreColor = 'secondary';
                                        if (session.score >= 80) {
                                            scoreColor = 'success';
                                        } else if (session.score >= 60) {
                                            scoreColor = 'warning';
                                        } else {
                                            scoreColor = 'danger';
                                        }
                                        %>
                                        <span class="badge bg-<%= scoreColor %>"><%= session.score %>%</span>
                                    <% } else { %>
                                        <span class="text-muted">N/A</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (session.is_completed) { %>
                                        <span class="badge bg-success">Completed</span>
                                    <% } else { %>
                                        <span class="badge bg-warning">In Progress</span>
                                    <% } %>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <%= moment(session.created_at).format('MMM DD, YYYY HH:mm') %>
                                    </small>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                <div class="text-center py-3">
                    <i class="fas fa-question-circle fa-2x text-muted mb-2"></i>
                    <p class="text-muted">No quiz sessions found</p>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-microphone me-2"></i>Recent Speaking Sessions</h5>
            </div>
            <div class="card-body">
                <% if (speakingSessions && speakingSessions.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Session ID</th>
                                <th>Avg Score</th>
                                <th>Status</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% speakingSessions.forEach(session => { %>
                            <tr>
                                <td>#<%= session.id %></td>
                                <td>
                                    <% if (session.is_completed && session.average_score !== null) { %>
                                        <%
                                        var scoreColor = 'secondary';
                                        if (session.average_score >= 80) {
                                            scoreColor = 'success';
                                        } else if (session.average_score >= 60) {
                                            scoreColor = 'warning';
                                        } else {
                                            scoreColor = 'danger';
                                        }
                                        %>
                                        <span class="badge bg-<%= scoreColor %>"><%= parseFloat(session.average_score).toFixed(1) %>%</span>
                                    <% } else { %>
                                        <span class="text-muted">N/A</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (session.is_completed) { %>
                                        <span class="badge bg-success">Completed</span>
                                    <% } else { %>
                                        <span class="badge bg-warning">In Progress</span>
                                    <% } %>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <%= moment(session.created_at).format('MMM DD, YYYY HH:mm') %>
                                    </small>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                <div class="text-center py-3">
                    <i class="fas fa-microphone fa-2x text-muted mb-2"></i>
                    <p class="text-muted">No speaking sessions found</p>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete() {
    if (confirm('Are you sure you want to delete this user? This action cannot be undone.')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/admin/users/<%= user.id %>/delete';
        document.body.appendChild(form);
        form.submit();
    }
}
</script>
